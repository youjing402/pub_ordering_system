<script>
$(document).ready(function() {
$('#JSON-text').draggable({
	appendTo : "body",
	//inget funkade utan clone...
	helper : "clone",
	revert : "invalid"
});

$('.dragBox').draggable({
	revert : "invalid",
	helper : "clone"
});

$('#carlsbergBeer').draggable({
	revert : "invalid",
	helper : "clone"
});

$('.testBox').droppable({
/*	drop : function(event, ui){
		alert('added');
		$(this).html(ui.draggable.text());
	} */
	drop: function(event, ui){
	var text = $(ui.draggable.attr("alt"))
	var old = $(this).html();
	
	if(old == ""){
		$(this).html(ui.draggable.attr("text") + "<br>");
	
	}else{
	
		$(this).html(old + ui.draggable.attr("text") + "<br>");
	}
	
	console.log(ui.draggable.attr("text"));
/*	$(this).text(ui.draggable.attr("text")); */
	ui.helper.hide('explode');
	}
});

$('.Items').droppable({
	drop: function(event, ui){
		$(this).text(ui.draggable.text());
	}
})


$('#BeerBtn').click(function(){$('#BeerBtn').animate({
						'width':50,'height': 50})
						$.get('http://pub.jamaica-inn.net/fpdb/api.php?username=jorass&password=jorass&action=iou_get', handleInfoFromPost);
						}); 
						
function handleInfoFromPost(data){
	console.log(data);
	console.log(data.payload[0]);
	$('#JSON-text').html(data.payload[0].first_name);
	
	
}


}); // end ready
